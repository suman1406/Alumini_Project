<!-- employmentHistory.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employment History</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #333;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 80%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #4caf50;
            color: white;
        }
    </style>
</head>

<body>
    <h1>Employment History</h1>
    <% if (employmentHistory.length> 0) { %>
        <table>
            <tr>
                <th>Alumini ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Job Description</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
            <% employmentHistory.forEach(employment=> { %>
                <tr>
                    <td>
                        <%= employment.alumini_id %>
                    </td>
                    <td>
                        <%= employment.emp_start_date %>
                    </td>
                    <td>
                        <%= employment.emp_end_date %>
                    </td>
                    <td>
                        <%= employment.job_description %>
                    </td>
                    <td>
                        <%= employment.first_name %>
                    </td>
                    <td>
                        <%= employment.last_name %>
                    </td>
                </tr>
                <% }); %>
        </table>
        <% } else { %>
            <p>No employment history available for this alumini.</p>
            <% } %>
</body>

</html>